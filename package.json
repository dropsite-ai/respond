{
  "name": "@dropsite/respond",
  "version": "2.0.0",
  "description": "Tagged HTML template for server-rendered UI and Alpine.js markup.",
  "main": "./dist/html.js",
  "types": "./dist/html.d.ts",
  "scripts": {
    "build": "tsc",
    "release": "npm run build && npm publish --access public",
    "test": "vitest",
    "update": "ncu -u"
  },
  "keywords": [
    "html",
    "template",
    "tagged-template",
    "alpinejs",
    "ssr",
    "escape",
    "raw-html"
  ],
  "author": "",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/html.js",
      "types": "./dist/html.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "devDependencies": {
    "@types/node": "22.14.1",
    "npm-check-updates": "17.1.18",
    "typescript": "5.8.3",
    "vitest": "3.1.1"
  }
}
